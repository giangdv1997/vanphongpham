

@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <tr>
        <th>
            Mã Đơn hàng
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Tổng tiền
        </th>
        <th>
            Người tạo
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            item.MaDonHang
        </td>
        <td>
            item.NgayTao
        </td>
        <td>
            item.TongTien
        </td>
        <td>
            item.Email
        </td>
        <td>
            item.SDT
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaDonHang }, new { @class = "btn btn-sm btn-success" })
            @Html.ActionLink("Details", "Details", new { id = item.MaDonHang }, new {@class="btn btn-sm btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.MaDonHang }, new {@class="btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
