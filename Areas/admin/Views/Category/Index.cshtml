@model IEnumerable<Nhom1_VanPhongPham.Areas.admin.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <button class="btn btn-success">Thêm</button>
</div> 

<table class="table table-sm table-hovered">
    <thead>
        <tr>
            <th>Mã danh mục</th>
            <th>Tên danh mục</th>
            <th>Mã danh mục cha</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MaDanhMuc
                </td>
                <td>
                    @item.TenDanhMuc
                </td>
                <td>
                    @item.MaCha
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Update", new { id = item.MaDanhMuc })
                    @Html.ActionLink("Xóa","Delete", new { id = item.MaDanhMuc })
                </td>
            </tr>
        }

    </tbody>
</table>